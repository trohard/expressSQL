doctype html
html(lang='en')
  include common/head.pug
  +head("Starter MVP")
  body
    header
      include common/navbar.pug
      +navbar() 
    .container
      .row.align-items-center
        .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
          h1.mb-3 Minimum Viable Landing Page
          p.lead This tutorial is really cool!
          p.lead.mb-4 Learn how to launch a landing page and collect leads            
          form(action="/", method="POST")
            .input-group.mb3
              input(required type="email", name="lead_email", placeholder="Enter your email address").form-control
              .input-group-append
                button(type="submit").btn.btn-primary Get Started
      .row
        .col-md-6
          if leads
            p
            h1 Leads
            table.table
              thead
                tr
                  th(scope="col") Email
                  th(scope="col") Actions
                  th(scope="col")
              tbody
                for lead in leads
                  tr(id=lead.id)
                    td
                      span #{lead.email} 
                    td
                      a(href="/lead/" + lead.id) Details
                    td 
                      button(onclick=`deleteLead('${lead.id}')`).btn.btn-primary Delete
    include common/footer.pug
    +footer()
    script(src="/javascripts/leads.js")